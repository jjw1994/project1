body{
    background-color: #f0f4f7;
}
/*blog-banner*/
.banner-bg{
    width: 100%;
}
.banner-bg img{
    width: 100%;
    height: auto;
}

/*blog-content*/
.blog-content{
    width: 1000px;
    height: 300px;
    margin: 0 auto;
}
.blog-content div{
    display: inline-block;
}
.blog-tag{
    float: left;
    margin: 20px 36px;
    width: 228px;
    height: auto;
}
.tag-item{
    float: left;
    margin: 6px;
    height: 64px;
    width: 64px;
    border-radius: 32px;
    background-color: #fff;
    cursor: pointer;
}
.tag-item img{
    margin: 6px;
    height: 52px;
    width: 52px;
    border-radius: 26px;
}
.tag-item img.tag-active {
    margin: 0;
    height: 64px;
    width: 64px;
    border-radius: 32px;
}

.blog-artical{
    float: left;
    width: 660px;
    height: auto;
    margin: 20px 0;
    background-color: #fff;
    padding: 20px;
}
.blog-articles-tag{
    height: 60px;
    width: 100%;
}
.current-articles-tag,
.current-articles-title,
.article-change{
    display: block;
    height: 40px;
    line-height: 40px;
    margin: 10px;
}
.current-articles-tag{
    float: left;
    border-radius: 20px;
    width: 40px;
}
.current-articles-title{
    float: left;
    font-size: 16px;
    color: #7f99ae;
}
.article-change{
    float: right;
    color: #3570c3;
    cursor: pointer;
}
.article-item,
.article-item>a{
    margin-left: 8px;
    display: block;
    height: 24px;
    line-height: 24px;
    color: #7491A8;
}
.article-time{
    height: 24px;
    line-height: 24px;
    color: #fff;
    padding: 0 10px;
    background-color: #7591A8;
}
.article-title{
    padding: 0 0 0 10px;
}
.tag-total{
    margin: 10px 0 10px 16px;
    color: #7491A8;
}