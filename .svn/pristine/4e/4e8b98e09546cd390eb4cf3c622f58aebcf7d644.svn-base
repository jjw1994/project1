#wrap{
    border:1px solid red;
    height:100%;
    width:93%;
    margin:0 auto;
    background-color:#00A185;
}
#content{
    width:1000px;
    margin:50px auto;
    background-color:white;
    font-size:15px;
}
#header{
    width:100%;
    background-color:#000;
    color:white;
    text-align:center;
}
#main{
    width:70%;
    margin:50px auto;
    position:relative;
}
.left{
    width:70%;
}
.right{
    margin-left:73%;
    position:absolute;
    top:0;
    width:28%;
}
.headimg{
    width:100px;
    height:100px;
    border-radius: 50px;
    border:7px solid #858585;
}
.userinfo{
    text-align:center;
    margin-bottom:10%;
}
.personal_letter{
    width:22%;
    height:12%;
}
.personal_letter:hover{
    background:#ccc;
}
.article h2,h3{
    font-weight:lighter;
}
.article h3{
    margin-bottom:12px;
}
.view{
    text-align:center;
    display:table-cell;
    width:10%;
    height:30px;
    background:mediumpurple;
    float:left;
}
.detail{
    margin-left:12%;
    font-size:10px;
}
.sub_content{
    line-height:1.5em;
}
.article{
    margin-bottom:10%;
}
.collection{
    margin-bottom:10%;
}
.new_state{
    margin_bottom:10%;
}

.collection h2,h3{
    font-weight:lighter;
}
.collection h3{
    margin-bottom:12px;
}
.new_state h2,h3{
    font-weight:lighter;
}
.new_state h3{
    margin-bottom:12px;
}
button{
    display:block;
    margin:50px auto;
    width:70%;
    height:40px;
}
.more{
    padding-bottom:10%;
}
.recomment{
    font-size:15px;
}
.hot{
    float:left;
}
.change{
    position:absolute;
    right:0;
    top:0;
}
.re_content p{
    font-size:10px;
    line-height:2em;
}
.re_content{
    margin-top:30px;
}
.extra img{
    width:40px;
    height:40px;
}
.extra{
    margin-top:70px;
}
.ads img{
    margin:50px auto;
    width:100%;
}
