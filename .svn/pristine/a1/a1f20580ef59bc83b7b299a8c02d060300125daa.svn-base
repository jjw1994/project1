.view-comment{
    margin:  0 0 40px 0;
    width: 700px;
}
.view-comment-item-title .view-conment-id{
    display: block;
    float: right;
    height: 40px;
    line-height: 40px;
    margin-right: 20px;
}
.view-comment-item-title{
    height: 40px;
    width: 100%;
    margin-bottom: 10px;
}
.view-comment-item-title span{
    display: block;
    float: left;
    height: 40px;
    width: auto;
    line-height: 40px;
    padding-left: 10px;
}
.comment-user-name,
.comment-user-name a{
    color: #2E7BB4;
    font-weight: 600;
    font-size: 16px;
}
.comment-user-name a:hover{
    color: #6F82A5;
    text-decoration: underline;
}
.view-comment-item-title img{
    display: block;
    float: right;
    height: 30px;
    width: 30px;
    margin: 5px 20px 5px 0;
    border-radius: 3px;
}
.comment-replay-box{
    margin: 0 0 0 36px;
}
.replay-item-title{
    height: 40px;
    width: 100%;
    margin-bottom: 5px;
}
.replay-user-name a{
    display: block;
    float: left;
    height: 40px;
    line-height: 40px;
    width: auto;
    line-height: 40px;
    padding-left: 10px;
    olor: #2E7BB4;
    font-weight: 600;
    font-size: 14px;

}
.replay-user-name a:hover{
    color: #6F82A5;
    text-decoration: underline;
}

.replay-item-title img{
    display: block;
    float: left;
    height: 30px;
    width: 30px;
    border-radius: 3px;
    margin: 5px 0;
}
.replay-item-title span{
    height: 40px;
    line-height: 40px;
    padding-left: 6px;
    float: left;
}
.replay-box{
    display: none;
    width: 100%;
    height: 60px;
    margin: 10px 0 20px;
    position: relative;
}
.replay-box-show{
    display: block;
}
.comment-replay{
    position: relative;
    width: 100%;
    height: 60px;
    margin: 10px 0 20px;
}
.replay-box input,
.comment-replay input{
    display: block;
    height: 30px;
    width: 80%;
    padding: 0 0 0 10px;
}
.replay-submit,
.comment-replay-submit{
    position: absolute;
    right: 20%;
    top: 40px;
    width: 60px;
    height: 24px;
    line-height: 24px;
    border: 1px solid #0D6EB8;
    background-color: #1575d5;
    color: #fff;
    outline: none;
}
.show-replay{
    color: #2E7BB4;
    margin-left: 60px;
    cursor: pointer;
}

.coment-but-group{
    clear: both;
    height: 60px;
    margin-bottom: 60px;
}
#comment-submit{
    float: right;
    width: 60px;
    height: 32px;
    line-height: 32px;
    border: 1px solid #0D6EB8;
    background-color: #1575d5;
    color: #fff;
    outline: none;
}