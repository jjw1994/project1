/*lsgo direction*/
.lsgo-direction{
    position: absolute;
    left: 50%;
    bottom: 20%;
    width: 950px;
    height: 150px;
    margin-left: -475px;
}
.lsgo-direction li{
    list-style: none;
    float: left;
    width: 150px;
    height: 150px;
    margin: 0 20px;
    border-radius: 50%;
    background-repeat: no-repeat;
    background-position: 0 0;
    background-size: 150px;

}
.lsgo-direction li:hover{
    margin: -18px 2px;
    width: 186px;
    height: 186px;
    background-size: 186px;
    transition: all 1s ease;
}
.lsgo-direction li:first-child{
    background-image: url(../images/direction_first_182.jpg);
}
.lsgo-direction li:nth-child(2){
    background-image: url(../images/direction_second_182.jpg);

}
.lsgo-direction li:nth-child(3){
    background-image: url(../images/direction_third_182.jpg);

}
.lsgo-direction li:nth-child(4){
    background-image: url(../images/direction_fourth_182.jpg);

}
.lsgo-direction li:last-child{
    background-image: url(../images/direction_fifth_182.jpg);
}

