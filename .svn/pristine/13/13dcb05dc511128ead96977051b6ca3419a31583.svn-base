* {
    margin: 0;
    padding: 0;
}
body {
    font: 16px/1.8 "方正",verdana;
    font-weight: 100;
}
/* 右侧导航*/
#fullPage-nav {
    _display: none;
}
#fullPage-nav li {
    width: 90px;
    height: 12px;
    vertical-align: middle;
}
#fullPage-nav li a {
    float: right;
    width: 12px;
    height: 12px;
    text-decoration: none;
}
#fullPage-nav span {
    display: inline-block;
    width: 12px;
    height: 12px;
}

#fullPage-nav li .active {
    background-position: 0 bottom;
}
/*section 容器*/
.section {
    position: relative;
    overflow: hidden;
}
.section .bg {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
}
.section .bg img {
    display: block;
    width: 100%;
    height: 100%;
}

/*section1 bg11*/
.bg11 {
    position: absolute;
    bottom: -800px;
    /*兼容性(CSS hack的写法,选择IE8+和Opera15以下的浏览器)*/
    bottom: 0\0;
    width: 100%;
    height: 800px;
    background-image: url(../images/bg11_1362_724.jpg);
    background-repeat: no-repeat;
    background-size: 100% 100%;
    opacity: 0;/*暂时不知道作用*/
    transition: all 1.7s ease;
}
.active .bg11 {
    bottom: 0;
    opacity: 1;/*暂时不知道作用*/
    transition-delay: 0.7s;/*暂时不知道作用*/
}
/*for it ie 10*/
.ltie10 .bg11 {
    bottom: 0;
    opacity: 1;
    transition-delay: 0.7s;
}

