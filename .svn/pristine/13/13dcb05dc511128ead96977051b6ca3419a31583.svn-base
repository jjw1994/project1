/*first-title*/
.first-title {
    position: absolute;
    width: 100%;
    height: auto;
    margin: 0 auto;
    bottom: 24%;
    text-align: center;
    opacity: 1;
    -webkit-transform: scale(0.5, 0.5);
    transform: scale(0.5, 0.5);
    transition: all 1s;
    color: #417986;
    font-size: 3rem;
}
.active .first-title {
    opacity: 1;
    -webkit-transform: scale(1, 1);
    transform: scale(1, 1);
    transition-delay: 1.7s;
}

